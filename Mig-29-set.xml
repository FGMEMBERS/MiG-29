<?xml version="1.0"?>
<!--
************************************************************************
Mig 29 Fulcrum simulation config.

February 2006,  Detlef Faber
************************************************************************
-->

<PropertyList>

 <sim>

  <description>MiG-29 Fulcrum</description>
  <author>Detlef Faber</author>
  
  <flight-model>yasim</flight-model>
  <aero>Mig-29-yasim</aero>
  <fuel-fraction>1.0</fuel-fraction>

  <systems>
   <electrical>
    <path>Aircraft/Generic/generic-electrical.xml</path>
   </electrical>
  </systems> 
 
  <virtual-cockpit archive="y">true</virtual-cockpit>
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

  <sound>
   <path>Aircraft/seahawk/Sounds/seahawk-sound.xml</path>
  </sound>
<!--
  <submodels> 
    <serviceable type="bool">true</serviceable>
    <path>Aircraft/sabre/Models/submodels.xml</path>
  </submodels>
-->
  <panel>
  <path>Aircraft/Generic/Panels/generic-vfr-panel.xml</path>
  <visibility>false</visibility>
  </panel>

  <model>
   <path>Aircraft/Mig-29/Models/Mig-29.xml</path>
  </model> 

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <x-offset-m archive="y" type="double">0.0</x-offset-m>
    <y-offset-m archive="y" type="double">1.2</y-offset-m>
    <z-offset-m archive="y" type="double">4.6</z-offset-m>
    <pitch-offset-deg>-7.5</pitch-offset-deg>
   </config>
  </view>

  <view n="1">
   <config>
    <target-z-offset-m archive="y" type="double">9.0</target-z-offset-m>
   </config>
  </view>

  <view n="2">
   <config>
    <target-z-offset-m archive="y" type="double">9.9</target-z-offset-m>
   </config>
  </view>

  <view n="3">
   <config>
    <target-z-offset-m archive="y" type="double">9.0</target-z-offset-m>
   </config>
  </view>

  <view n="4">
   <config>
    <target-z-offset-m archive="y" type="double">9.0</target-z-offset-m>
   </config>
  </view>
  <view n="5">
   <config>
    <target-z-offset-m archive="y" type="double">9.0</target-z-offset-m>
   </config>
  </view>
  <view n="6">
   <config>
    <target-z-offset-m archive="y" type="double">9.0</target-z-offset-m>
   </config>
  </view>

 <autopilot>
   <config>
     <min-climb-speed-kt type="float">70.0</min-climb-speed-kt>
     <best-climb-speed-kt type="float">75.0</best-climb-speed-kt>
     <target-climb-rate-fpm type="float">500.0</target-climb-rate-fpm>
     <target-descent-rate-fpm type="float">1000.0</target-descent-rate-fpm>
     <elevator-adj-factor type="float">4000.0</elevator-adj-factor>
     <integral-contribution type="float">0.01</integral-contribution>
     <zero-pitch-throttle type="float">0.45</zero-pitch-throttle>
     <zero-pitch-trim-full-throttle type="float">0.14</zero-pitch-trim-full-throttle>
   </config>
 </autopilot>

  <hud>
   <enable3d>false</enable3d>
  </hud>  
 </sim>

 <engines>
  <engine>
   <rpm type="double">700</rpm>
  </engine>
 </engines>


 <!-- set prop for the manual "bookmark" arrow on the remote compas -->
 <instrumentation>
    <magnetic-compass>
       <bookmark-heading-deg type="double">43.0</bookmark-heading-deg>
    </magnetic-compass>
 </instrumentation>

 <!-- set up control properties for YASim -->
 <controls>
   <engines>
      <engine n="0">
        <magnetos>3</magnetos>
        <boost type="double">0.33</boost>
		<throttle type="float">0.001</throttle>
      </engine>
   </engines>
   <gear>
      <tailwheel-lock>false</tailwheel-lock>
   </gear>
   <canopy>
      <canopy-pos-norm type="float">1.0</canopy-pos-norm>
   </canopy>
 

 </controls>

 <yasim>
   <weights>
     <pilot-lb>210</pilot-lb>
   </weights>
 </yasim>
 <!-- Map Keys -->
 <input>
    <keyboard>
     
      <key n="67">
        <name>C</name>
        <desc>Toggle Canopy</desc>
        <binding n="0">
          <command>nasal</command>
          <script>Mig-29.toggle_canopy()</script>
        </binding>
      </key>


      <key n="78"> 
        <name>N</name>
        <desc>Extend Speedbrakes</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/flight/speedbrake</property>
          <step type="double">0.2</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="110"> 
        <name>n</name>
        <desc>Retract Speedbrakes</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/flight/speedbrake</property>
          <step type="double">-0.2</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>

     </keyboard>
 </input>

<!-- Nasal files/scripts -->
  <nasal>
    <f86f>
      <file>Aircraft/Mig-29/Mig-29.nas</file>
<!--
      <script>ext_slats();</script>
-->
    </f86f>

    <pilot-g>
     <file>Aircraft/Mig-29/pilot-g.nas</file>
    </pilot-g>

  </nasal>

</PropertyList>




